<v:ValidatableControl x:Class="Grizzlist.Client.Tasks.Templates.ConditionValueControl"
             xmlns:v="clr-namespace:Grizzlist.Client.Validators"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Grizzlist.Client.Tasks.Templates"
             mc:Ignorable="d">
    <Grid Background="#D8FFDD">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="60" />
            <ColumnDefinition />
            <ColumnDefinition Width="22" />
        </Grid.ColumnDefinitions>
        <ComboBox Margin="5" x:Name="cbType" />
        <TextBox Grid.Column="1" Margin="5 6" x:Name="tbValue" />
        <Image Grid.Column="3" Margin="2" Source="/Resources/remove_24_red.png" MouseLeftButtonDown="Remove_MouseLeftButtonDown" />
    </Grid>
</v:ValidatableControl>
