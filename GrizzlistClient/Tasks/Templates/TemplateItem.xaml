<UserControl x:Class="Grizzlist.Client.Tasks.Templates.TemplateItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Margin="4 6 4 2" FontWeight="Bold" x:Name="tbName" Text="Task name" />
        <TextBlock Grid.Row="1" Margin="4 0 4 4" TextWrapping="Wrap" x:Name="tbDescription" Text="Task description" />
    </Grid>
</UserControl>
